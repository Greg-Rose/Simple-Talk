<!DOCTYPE html>
<html>
  <head>
    <title>SimpleTalk</title>
    <meta name="viewport" content="initial-scale=1">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% if !current_page?(root_path) && !current_page?(welcome_index_path) %>
            <a class="navbar-brand" href="<%= root_path %>">SimpleTalk</a>
          <% end %>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="<%= new_user_registration_path %>">Sign Up</a></li>
            <li><a href="<%= new_user_session_path %>">Sign In</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>

  </body>
</html>

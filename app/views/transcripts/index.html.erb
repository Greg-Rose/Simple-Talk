<div class="container">
  <div class="row transcripts-index">
    <div class="col-md-12 text-center">
      <h2 id="my-transcripts-title">My Transcripts</h2>
    </div>

    <% @transcripts.each do |transcript| %>
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading text-center">
            <h3 class="panel-title"><%= transcript.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%m/%d/%Y %l:%M:%S %p") %></h3>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-6 text-center">
                <h3>Orginal</h3>
                <p><%= transcript.original.html_safe %></p>
              </div>
              <div class="col-md-6 text-center">
                <h3>Simple</h3>
                <p><%= transcript.simplified %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
